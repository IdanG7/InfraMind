apiVersion: v1
kind: Secret
metadata:
  name: inframind-secrets
  namespace: infra
type: Opaque
stringData:
  # API Configuration
  # Generate with: openssl rand -hex 32
  api-key: "REPLACE_WITH_YOUR_API_KEY"

  # Database
  # Generate with: openssl rand -base64 32
  postgres-password: "REPLACE_WITH_YOUR_POSTGRES_PASSWORD"
  database-url: "postgresql://inframind:REPLACE_WITH_YOUR_POSTGRES_PASSWORD@postgres-service.infra.svc.cluster.local:5432/inframind"

  # Redis
  # Generate with: openssl rand -base64 16
  redis-password: "REPLACE_WITH_YOUR_REDIS_PASSWORD"
  redis-url: "redis://:REPLACE_WITH_YOUR_REDIS_PASSWORD@redis-service.infra.svc.cluster.local:6379/0"

  # MinIO/S3
  minio-access-key: "inframind-prod"
  # Generate with: openssl rand -base64 32
  minio-secret-key: "REPLACE_WITH_YOUR_MINIO_SECRET"

  # Grafana
  # Generate with: openssl rand -base64 16
  grafana-admin-password: "REPLACE_WITH_YOUR_GRAFANA_PASSWORD"

---
apiVersion: v1
kind: Secret
metadata:
  name: inframind-monitoring
  namespace: infra
type: Opaque
stringData:
  # Alerting (add when configured)
  slack-webhook-url: ""
  pagerduty-key: ""
